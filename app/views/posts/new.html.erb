<h1>Create a post</h1>

<%= form_with(model: @post, local: true) do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title, size: 50 %><br><br>

  <%= f.label :body %><br>
  <%= f.text_area :body, cols: 50, rows: 10 %><br><br>

  <%= f.submit 'Create' %>
<% end %>
<br>
<%= link_to '<< Go back', posts_path %>
